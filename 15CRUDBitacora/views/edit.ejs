<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Registro de Mantenimiento</title>
    <link rel="stylesheet" href="../css/edit.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Actualizar Registro de Mantenimiento</h1>

        <div class="form-section">
            <h2 class="section-title">Editar Datos del Mantenimiento</h2>
    <form action="/mantenimiento/update/<%= registro.id %>" method="POST" class="form-container">

    <form action="/mantenimiento/update/<%= registro.id %>" method="POST" class="form-container">

        <!-- Fecha y Hora -->
        <div class="form-group">
            <label for="FechaHora">Fecha y Hora:</label>
            <input 
                type="datetime-local" 
                id="FechaHora" 
                name="FechaHora" 
                class="form-input"
                value="<%= registro.FechaHora.toISOString().slice(0,16) %>" 
                required
            >
        </div>

        <!-- ID Equipo -->
        <div class="form-group">
            <label for="ID_Equipo">ID del Equipo:</label>
            <input 
                type="number" 
                id="ID_Equipo" 
                name="ID_Equipo" 
                class="form-input"
                value="<%= registro.ID_Equipo %>" 
                required
            >
        </div>

        <!-- Fallo -->
        <div class="form-group">
            <label for="Fallo">Fallo:</label>
            <input 
                type="text" 
                id="Fallo" 
                name="Fallo" 
                class="form-input"
                value="<%= registro.Fallo %>" 
                required
            >
        </div>

        <!-- Diagnóstico -->
        <div class="form-group">
            <label for="Diagnostico">Diagnóstico:</label>
            <input 
                type="text" 
                id="Diagnostico" 
                name="Diagnostico" 
                class="form-input"
                value="<%= registro.Diagnostico %>" 
                required
            >
        </div>

        <!-- Corrección -->
        <div class="form-group">
            <label for="Correccion">Corrección:</label>
            <input 
                type="text" 
                id="Correccion" 
                name="Correccion" 
                class="form-input"
                value="<%= registro.Correccion %>" 
                required
            >
        </div>

        <!-- Reemplazo -->
        <div class="form-group">
            <label for="Remplazo">Reemplazo:</label>
            <select id="Remplazo" name="Remplazo" class="form-input" required>
                <option value="motor" <%= registro.Remplazo === "motor" ? "selected" : "" %>>Motor</option>
                <option value="filtro" <%= registro.Remplazo === "filtro" ? "selected" : "" %>>Filtro</option>
                <option value="refrigeración" <%= registro.Remplazo === "refrigeración" ? "selected" : "" %>>Refrigeración</option>
                <option value="embrague" <%= registro.Remplazo === "embrague" ? "selected" : "" %>>Embrague</option>
                <option value="pantalla" <%= registro.Remplazo === "pantalla" ? "selected" : "" %>>Pantalla</option>
            </select>
        </div>

        <!-- Inactividad -->
        <div class="form-group">
            <label for="Inactividad">Tiempo de Inactividad:</label>
            <input 
                type="text" 
                id="Inactividad" 
                name="Inactividad" 
                class="form-input"
                value="<%= registro.Inactividad %>" 
                required
            >
        </div>

        <!-- Botón -->
        <button type="submit" class="btn-submit">Actualizar Registro</button>
    </form>
        </div>
    </div>

    <div class="regresar"><a href="/">Regresar</a></div>
