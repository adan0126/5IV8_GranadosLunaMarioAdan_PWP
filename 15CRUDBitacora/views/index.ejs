<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitácora de Mantenimiento</title>
    <link rel="stylesheet" href="../css/index.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Bitácora de Mantenimiento</h1>

        <h1 class="title">Bitácora de Mantenimiento</h1>

        <!-- FORMULARIO PARA AGREGAR NUEVO REGISTRO -->
        <div class="form-section">
            <h2 class="section-title">Registrar Nuevo Mantenimiento</h2>
        <form action="/mantenimiento" method="POST" class="form-container">

            <div class="form-group">
                <label for="FechaHora">Fecha y Hora:</label>
                <input type="datetime-local" id="FechaHora" name="FechaHora" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="ID_Equipo">ID del Equipo:</label>
                <input type="number" id="ID_Equipo" name="ID_Equipo" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="Fallo">Fallo:</label>
                <input type="text" id="Fallo" name="Fallo" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="Diagnostico">Diagnóstico:</label>
                <input type="text" id="Diagnostico" name="Diagnostico" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="Correccion">Corrección:</label>
                <input type="text" id="Correccion" name="Correccion" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="Remplazo">Reemplazo:</label>
                <select id="Remplazo" name="Remplazo" class="form-input" required>
                    <option value="">-- Seleccione una opción --</option>
                    <option value="motor">Motor</option>
                    <option value="filtro">Filtro</option>
                    <option value="refrigeración">Refrigeración</option>
                    <option value="embrague">Embrague</option>
                    <option value="pantalla">Pantalla</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Inactividad">Tiempo de Inactividad:</label>
                <input type="text" id="Inactividad" name="Inactividad" class="form-input" placeholder="Ej: 30 minutos, 2 horas" required>
            </div>

            <button type="submit" class="btn-submit">Registrar Mantenimiento</button>
        </form>
        </div>

        </div>

    <div class="table-section">
        <h2 class="section-title">Registros Guardados</h2>

        <!-- TABLA DE REGISTROS -->
        <div class="table-responsive">
    <table class="data-table">
        <thead>
            <tr>
                <th>Fecha y Hora</th>
                <th>ID Equipo</th>
                <th>Fallo</th>
                <th>Diagnóstico</th>
                <th>Corrección</th>
                <th>Reemplazo</th>
                <th>Inactividad</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% datos.forEach(function(registro){ %>
                <tr>
                    <td><%= registro.FechaHora %></td>
                    <td><%= registro.ID_Equipo %></td>
                    <td><%= registro.Fallo %></td>
                    <td><%= registro.Diagnostico %></td>
                    <td><%= registro.Correccion %></td>
                    <td><%= registro.Remplazo %></td>
                    <td><%= registro.Inactividad %></td>

                    <td class="action-links">
                        <a href="/mantenimiento/edit/<%= registro.id %>" class="btn-edit">Editar</a>
                        <a href="/mantenimiento/delete/<%= registro.id %>" class="btn-delete">Eliminar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
        </div>
    </div>
    </div>

    <div class="regresar"><a href="../index.html">Regresar</a></div>
