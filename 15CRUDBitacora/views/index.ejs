<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitácora de Mantenimiento</title>
</head>
<body>

    <h1>Registro de Mantenimiento</h1>

    <!-- FORMULARIO PARA AGREGAR NUEVO REGISTRO -->
    <form action="/mantenimiento" method="POST">

        <label for="FechaHora">Fecha y Hora:</label>
        <input type="datetime-local" id="FechaHora" name="FechaHora" required>

        <br><br>

        <label for="ID_Equipo">ID del Equipo:</label>
        <input type="number" id="ID_Equipo" name="ID_Equipo" required>

        <br><br>

        <label for="Fallo">Fallo:</label>
        <input type="text" id="Fallo" name="Fallo" required>

        <br><br>

        <label for="Diagnostico">Diagnóstico:</label>
        <input type="text" id="Diagnostico" name="Diagnostico" required>

        <br><br>

        <label for="Correccion">Corrección:</label>
        <input type="text" id="Correccion" name="Correccion" required>

        <br><br>

        <label for="Remplazo">Reemplazo:</label>
        <select id="Remplazo" name="Remplazo" required>
            <option value="">-- Seleccione una opción --</option>
            <option value="motor">Motor</option>
            <option value="filtro">Filtro</option>
            <option value="refrigeración">Refrigeración</option>
            <option value="embrague">Embrague</option>
            <option value="pantalla">Pantalla</option>
        </select>

        <br><br>

        <label for="Inactividad">Tiempo de Inactividad:</label>
        <input type="text" id="Inactividad" name="Inactividad" placeholder="Ej: 30 minutos, 2 horas" required>

        <br><br>

        <button type="submit">Registrar Mantenimiento</button>
    </form>

    <hr>

    <h2>Registros Guardados</h2>

    <!-- TABLA DE REGISTROS -->
    <table border="1" cellpadding="8">
        <thead>
            <tr>
                <th>Fecha y Hora</th>
                <th>ID Equipo</th>
                <th>Fallo</th>
                <th>Diagnóstico</th>
                <th>Corrección</th>
                <th>Reemplazo</th>
                <th>Inactividad</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% datos.forEach(function(registro){ %>
                <tr>
                    <td><%= registro.FechaHora %></td>
                    <td><%= registro.ID_Equipo %></td>
                    <td><%= registro.Fallo %></td>
                    <td><%= registro.Diagnostico %></td>
                    <td><%= registro.Correccion %></td>
                    <td><%= registro.Remplazo %></td>
                    <td><%= registro.Inactividad %></td>

                    <td>
                        <a href="/mantenimiento/edit/<%= registro.id %>">Editar</a> |
                        <a href="/mantenimiento/delete/<%= registro.id %>">Eliminar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

</body>
</html>
